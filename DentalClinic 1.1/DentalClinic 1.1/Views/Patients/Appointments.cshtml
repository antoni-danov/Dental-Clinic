@model IEnumerable<DentalClinic_1._1.ViewModels.Patient.AppointmentViewModel>
@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments:</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Dentist</th>
            <th scope="col">Date</th>
            <th scope="col">Appointment hour</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                
                <td>@item.Date.Day</td>
                <td>@item.Date.Hour:@item.Date.Minute</td>
            </tr>
        }
    </tbody>
</table>