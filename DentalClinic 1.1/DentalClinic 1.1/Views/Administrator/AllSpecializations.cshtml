@model IEnumerable<DentalClinic_1._1.Models.Specialization>

@{
    ViewData["Title"] = "AllSpecializations";
}

<h1>List of Specialties:</h1>

<br />
<p>
    <button class="btn btn-primary">
        <a asp-action="AddSpecialization" class="text-white">Create new specialty</a>
    </button>
    <h4>
<p> Number of specialties: @Model.Count()</p>
</p>
</h4>

<table class="table table-striped">
    <tr class="header">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>@item.Description</td>
                <div class="card-foo">
                    <td>
                        <form  class="alert-danger" asp-action="RemoveSpecialization" asp-route-id="@item.Id" method="post" onclick="return confirm('Are you sure you want to delete this specialty?')">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </div>
            </tr>
        }
    </tbody>
</table>


